@model qvisitorCorp.Models.qvEntrance
@{

    ViewData["Title"] = "UpdateVisitors";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Изменить информацию о посетителе</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <ol class="breadcrumb">
        <li>
            <a asp-controller="CheckPoint" asp-action="Entrances"> Посетители</a>
        </li>
        <li class="active">
            Удалить посетителя
        </li>
    </ol>
    <div class="row">
        <div class="col-lg-12">
            <h3>Вы действительно хотите это удалить?</h3>
            <div>
                <dl>
                    <dt>
                        @Html.DisplayNameFor(model => model.ActionDate)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ActionDate)
                    </dd>
                </dl>

                <form asp-action="EntrancesDelete">
                    <div class="form-actions no-color">
                        <input type="submit" value="Удалить" class="btn" />
                        <a style="color:#333;" asp-controller="CheckPoint" asp-action="Entrances"><button type="button" class="btn"> Отмена</button></a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
