@{

    ViewData["Title"] = "Visitors";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Посетители</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <ol class="breadcrumb">
        <li class="active">
            Посетители
        </li>
    </ol>

    <div class="panel panel-default">
        <div class="panel-heading">
            <i class="glyphicon glyphicon-list-alt"></i>
            Список посетителей
        </div>
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" role="grid" aria-describedby="dataTables-example_info">
                    <thead>
                        <tr>
                            <th style="text-align:center; width:50px;">#</th>
                            <th style="text-align:center;">ФИО</th>
                            <th style="text-align:center;">ДОКУМЕНТ</th>
                            <th style="text-align:center;">ДЕЙСТВИЕ</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>Пупкин Василий Сергеевич</td>
                            <td>Удостоверение:8849923040982384</td>
                            <td>
                                <a style="color:#333;" asp-controller="CheckPoint" asp-action="SelectVisitors">
                                    <button class="btn">Просмотр</button>
                                </a>
                                <a style="color:#333;" asp-controller="CheckPoint" asp-action="UpdateVisitors">
                                    <button class="btn">Изменить</button>
                                </a>
                                <a style="color:#333;">
                                    <button class="btn">Удалить</button>
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="well">
                <a style="color:#333;" asp-controller="CheckPoint" asp-action="CreateVisitors">
                    <button class="btn">Добавить посетителя</button>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- jQuery -->
<script src="../bower_components/jquery/dist/jquery.min.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="~/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

<!-- Metis Menu Plugin JavaScript -->
<script src="~/bower_components/metisMenu/dist/metisMenu.min.js"></script>

<!-- DataTables JavaScript -->
<script src="~/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
<script src="~/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js"></script>

<!-- Custom Theme JavaScript -->
<script src="~/js/sb-admin-2.js"></script>

