@model IEnumerable<qvisitorCorp.Models.qvHotEntrance>
@{

    ViewData["Title"] = "KPP";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Доступ к объекту</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <ol class="breadcrumb">
        <li class="active">
            КПП
        </li>
    </ol>
   
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="glyphicon glyphicon-list-alt"></i>
                    Список пропусков
                </div>
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" role="grid" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th style="text-align:center; width:50px;">#</th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Attendant)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Comment)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DocumentNumber)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Organization)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Patronymic)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Surname)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Attendant)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Comment)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DocumentNumber)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Organization)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Patronymic)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Surname)
                                        </td>
                                        <td>
                                            <a style="color:#333;" asp-controller="CheckPoint" asp-action="HotEntrancesDetails" asp-route-id="1"><button class="btn">Просмотр</button></a>
                                            <a style="color:#333;" asp-controller="CheckPoint" asp-action="HotEntrancesEdit" asp-route-id="1"><button class="btn">Изменить</button></a>
                                            <a style="color:#333;" asp-controller="CheckPoint" asp-action="HotEntrancesDelete" asp-route-id="1"><button class="btn">Удалить</button></a>   
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="well">
                            <a style="color:#333;" asp-controller="CheckPoint" asp-action="HotEntrancesCreate">
                                <button class="btn" style="margin-right:0;">Добавить</button>
                            </a>

                            <a style="color:#333;" asp-controller="CheckPoint" asp-action="HotEntrancesDetails" asp-route-id="1"><button class="btn">Просмотр</button></a>
                            <a style="color:#333;" asp-controller="CheckPoint" asp-action="HotEntrancesEdit" asp-route-id="1"><button class="btn">Изменить</button></a>
                            <a style="color:#333;" asp-controller="CheckPoint" asp-action="HotEntrancesDelete" asp-route-id="1"><button class="btn">Удалить</button></a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- jQuery -->
<script src="../bower_components/jquery/dist/jquery.min.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="~/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

<!-- Metis Menu Plugin JavaScript -->
<script src="~/bower_components/metisMenu/dist/metisMenu.min.js"></script>

<!-- DataTables JavaScript -->
<script src="~/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
<script src="~/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js"></script>

<!-- Custom Theme JavaScript -->
<script src="~/js/sb-admin-2.js"></script>

