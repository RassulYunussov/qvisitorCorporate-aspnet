@{
    ViewData["Title"] = "TableOfVisitors";
}

<div id="page-wrapper" style="padding-top:20px;">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="glyphicon glyphicon-list-alt"></i>
                    Список пропусков
                </div>
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" role="grid" aria-describedby="dataTables-example_info">
                            <thead>
                                <tr>
                                    <th style="text-align:center;"></th>
                                    <th style="text-align:center;">ФИО</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <input  id="check_please" type="checkbox" />
                                    </td>
                                    <td>
                                       Пупкин Василий Сергеевич
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <input type="checkbox" />
                                    </td>
                                    <td>
                                       Ваганов Евгений Анисимович
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <input type="checkbox" />
                                    </td>
                                    <td>
                                        Ким Ася
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="well">
            <button type="button" class="btn" onclick="GetVisitors()">Заполнить</button>
        </div>

    </div>
</div>

<script>
    function GetVisitors(){
        var str = '';
        var elems = document.getElementById('dataTables-example').getElementsByTagName('input');
        for (var i = 0; i < elems.length; i++) {
            var input = elems[i];
            if (input.checked)
                str += document.getElementById('dataTables-example').rows[i+1].cells[1].innerText + ' ';
        }
        window.opener.document.getElementById('push_here').value = str;
        window.close();
    }
</script>