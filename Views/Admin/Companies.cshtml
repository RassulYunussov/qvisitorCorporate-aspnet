@model IEnumerable<qvisitorCorp.Models.qvCompany>

@{
    ViewData["Title"] = "Companies";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Компании</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <ol class="breadcrumb">
        <li class="active">
            Компании
        </li>
    </ol>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="glyphicon glyphicon-list-alt"></i>
                    Список компаний
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th style="text-align:center; width:60px;">#</th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            <a style="color:#333;" asp-controller="Admin" asp-action="CompaniesDetails" asp-route-id="@item.Id"><button class="btn">Просмотр</button></a>
                                            <a style="color:#333;" asp-controller="Admin" asp-action="CompaniesEdit" asp-route-id="@item.Id"><button class="btn">Изменить</button></a>
                                            <a style="color:#333;" asp-controller="Admin" asp-action="CompaniesDelete" asp-route-id="@item.Id"><button class="btn">Удалить</button></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                    <div class="well">
                        <a style="color:#333;" asp-controller="Admin" asp-action="CompaniesCreate">
                            <button type="button" class="btn">Добавить компанию</button>
                        </a>
                        <a style="color:#333;" asp-controller="Admin" asp-action="CompaniesDetails" asp-route-id="1"><button class="btn">Просмотр</button></a>
                        <a style="color:#333;" asp-controller="Admin" asp-action="CompaniesEdit" asp-route-id="1"><button class="btn">Изменить</button></a>
                        <a style="color:#333;" asp-controller="Admin" asp-action="CompaniesDelete" asp-route-id="1"><button class="btn">Удалить</button></a>
                        <a style="color:#333;" asp-controller="Admin" asp-action="Objects"><button class="btn">Объекты</button></a>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <!-- /.row -->

</div>
<!-- /.col-lg-6 -->
<!-- jQuery -->
<script src="~/bower_components/jquery/dist/jquery.min.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="~/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

<!-- Metis Menu Plugin JavaScript -->
<script src="~/bower_components/metisMenu/dist/metisMenu.min.js"></script>

<!-- DataTables JavaScript -->
<script src="~/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
<script src="~/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js"></script>

<!-- Custom Theme JavaScript -->
<script src="~/js/sb-admin-2.js"></script>

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script>
    $(document).ready(function() {
        $('#dataTables-example').DataTable({
                responsive: true
        });
    });
</script>


