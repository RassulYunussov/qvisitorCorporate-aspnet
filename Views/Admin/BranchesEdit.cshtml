@{

    ViewData["Title"] = "UpdateCompany";
}

@model qvisitorCorp.Models.qvBranch

@{
    ViewData["Title"] = "BranchesEdit";
}
<div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Изменить информацию о филиале</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <ol class="breadcrumb">
                <li>
                    <a asp-controller="Admin" asp-action="Branches"> Компания</a>
                </li>
                <li class="active">
                    Изменить информацию о филиале
                </li>
            </ol>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Изменить информацию о филиале
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-6">
                                        <form asp-controller="Admin" asp-action="BranchesEdit">
                                            <div>
                                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                <input type="hidden" asp-for="Id" />
                                                <div class="form-group">
                                                    <label asp-for="CityId" class="control-label col-md-3"></label>
                                                    <div class="col-md-10">
                                                        <select asp-for="CityId" class="form-control" asp-items="ViewBag.CityId"></select>
                                                        <span asp-validation-for="CityId" class="text-danger" />
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="CompanyId" class="control-label col-md-3"></label>
                                                    <div class="col-md-10">
                                                        <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.CompanyId"></select>
                                                        <span asp-validation-for="CompanyId" class="text-danger" />
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="HighBranchId" class="control-label col-md-3"></label>
                                                    <div class="col-md-10">
                                                        <select asp-for="HighBranchId" class="form-control" asp-items="ViewBag.HighBranchId"></select>
                                                        <span asp-validation-for="HighBranchId" class="text-danger" />
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="Name" class="col-md-3 control-label"></label>
                                                    <div class="col-md-10">
                                                        <input asp-for="Name" class="form-control" />
                                                        <span asp-validation-for="Name" class="text-danger" />
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <div class="col-md-10" style="margin-top:10px;">
                                                        <input type="submit" value="Сохранить" class="btn" />
                                                        <a asp-controller="Admin" asp-action="Branches"><button type="button" class="btn" style="color:#333"> Отмена</button></a>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                </div>
                                <!-- /.col-lg-6 (nested) -->
                                <!-- /.col-lg-6 (nested) -->
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->
