@model qvisitorCorp.Models.qvBranch

@{
    ViewData["Title"] = "BranchesCreate";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Добавить филиал</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <ol class="breadcrumb">
        <li>
            <a asp-controller="Admin" asp-action="Branches"> Компания</a>
        </li>
        <li class="active">
            Добавить филиал
        </li>
    </ol>
    <div class="panel panel-default">
        <div class="panel-heading">
            <i class="glyphicon glyphicon-list-alt"></i>
            Добавить филиал
        </div>

        <div class="panel-body">

            <form asp-controller="Admin" asp-action="BranchesCreate">
                <div class="form-horizontal">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="CityId" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <select asp-for="CityId" class="form-control" asp-items="ViewBag.CityId"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="CompanyId" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.CompanyId"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="HighBranchId" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <select asp-for="HighBranchId" class="form-control" asp-items="ViewBag.HighBranchId"></select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Создать" class="btn" />
                            <a asp-controller="Admin" asp-action="Branches"><button type="button" class="btn" style="color:#333"> Отмена</button></a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
