@model IEnumerable<qvisitorCorp.Models.qvDepartment>

@{
    ViewData["Title"] = "Departments";
}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Департаменты</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <ol class="breadcrumb">
        <li>
            <a asp-controller="Admin" asp-action="Branches"> Компания</a>
        </li>
        <li class="active">
            Департаменты
        </li>
    </ol>
    <div class="panel panel-default">
        <div class="panel-heading">
            <i class="glyphicon glyphicon-list-alt"></i>
            Список департаментов
        </div>
        <div class="panel-body">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" role="grid" aria-describedby="dataTables-example_info">
                    <thead>
                        <tr>
                            <th style="text-align:center;">#</th>
                            <th style="text-align:center;">НАИМЕНОВАНИЕ</th>
                            <th style="text-align:center;">ДЕЙСТВИЯ</th>
                        </tr>
                    </thead>
                    <tbody>
@foreach (var item in Model)
{
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                <a style="color:#333;" asp-controller="Admin" asp-action="DepartmentsEdit" asp-route-id="@item.Id">
                                    <button class="btn">Изменить</button>
                                </a>
                                <a style="color:#333;" asp-controller="Admin" asp-action="DepartmentsDetails" asp-route-id="@item.Id">
                                    <button class="btn">Просмотр</button>
                                </a>
                                <a style="color:#333;" asp-controller="Admin" asp-action="DepartmentsDelete" asp-route-id="@item.Id">
                                    <button class="btn">Удалить</button>
                                </a>
                            </td>
                        </tr>
}
                    </tbody>
                </table>
            </div>
            <div class="well">
                <a style="color:#333;" asp-controller="Admin" asp-action="DepartmentsCreate">
                    <button class="btn">
                        Добавить департамент
                    </button>
                </a>

                <a style="color:#333;" asp-controller="Admin" asp-action="DepartmentsEdit" asp-route-id="1">
                    <button class="btn">Изменить</button>
                </a>
                <a style="color:#333;" asp-controller="Admin" asp-action="DepartmentsDetails" asp-route-id="1">
                    <button class="btn">Просмотр</button>
                </a>
                <a style="color:#333;" asp-controller="Admin" asp-action="DepartmentsDelete" asp-route-id="1">
                    <button class="btn">Удалить</button>
                </a>
                <a style="color:#333;" asp-controller="Admin" asp-action="Users" asp-route-id="1">
                    <button class="btn">Пользователи</button>
                </a>
            </div>
        </div>
    </div>
</div>

