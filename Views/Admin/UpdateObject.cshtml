@{

    ViewData["Title"] = "UpdateObject";
}


<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Изменить информацию о департаменте</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <ol class="breadcrumb">
        <li>
            <a asp-controller="Admin" asp-action="Company"> Компания</a>
        </li>
        <li>
            <a asp-controller="Admin" asp-action="SelectCompany">Информация о филиале</a>
        </li>
        <li class="active">
            Изменить информацию о департаменте
        </li>
    </ol>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Изменить информацию о департаменте
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <form role="form">
                                <div class="form-group">
                                    <label>
                                        Наименование
                                    </label>
                                    <input type="text" class="form-control" required />
                                    <p class="help-block">Обязательное поле</p>
                                    <label>
                                        Описание
                                    </label>
                                    <input class="form-control" type="text" />
                                    <label>
                                        Статус
                                    </label>
                                    <select class="form-control">
                                        <option>Включено</option>
                                        <option>Выключено</option>
                                    </select>

                                    <div style="margin-top:20px;">
                                        <button type="submit" class="btn btn-primary">Сохранить</button>
                                        <a asp-controller="Admin" asp-action="SelectCompany"><button type="button" class="btn"> Отмена</button></a>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->