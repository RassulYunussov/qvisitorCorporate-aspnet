@model IEnumerable<qvisitorCorp.Models.qvBranch>
@{

    ViewData["Title"] = "Branches";
}
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Компания</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <ol class="breadcrumb">
        <li class="active">
            Компания
        </li>
    </ol>
    <div class="panel panel-default">
        <div class="panel-heading">
            <i class="glyphicon glyphicon-list-alt"></i>
            Список филиалов
        </div>

        <div class="panel-body">
            <div class="dataTable_wrapper">
                <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" role="grid" aria-describedby="dataTables-example_info">
                    <thead>
                        <tr role="row">
                            <th style="text-align:center; width:60px"> #</th>
                            <th style="text-align:center;">НАИМЕНОВАНИЕ</th>
                            <th style="text-align:center;">ДЕЙСТВИЯ</th>
                        </tr>
                    </thead>
                    <tbody>
@foreach (var item in Model)
{
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                            <td id="countries_name">@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>
                                <a style="color:#333;" asp-action="BranchesEdit" asp-route-id="@item.Id"><button class="btn">Изменить</button></a>
                                <a style="color:#333;" asp-action="BrancheDetails" asp-route-id="@item.Id"><button class="btn">Просмотр</button></a> 
                                <a style="color:#333;" asp-action="BranchesDelete" asp-route-id="@item.Id"><button class="btn">Удалить</button></a>
                            </td>
                        </tr>
}
                    </tbody>
                </table>
            </div>

            <div class="well">
                <button class="btn">
                    <a style="color:#333;" asp-controller="Admin" asp-action="BranchesCreate">
                        Добавить филиал
                    </a>

                    <a style="color:#333;" asp-action="BranchesEdit" asp-route-id="1"><button class="btn">Изменить</button></a>
                    <a style="color:#333;" asp-action="BranchesDetails" asp-route-id="1"><button class="btn">Просмотр</button></a>
                    <a style="color:#333;" asp-action="BranchesDelete" asp-route-id="1"><button class="btn">Удалить</button></a>
                    <a style="color:#333;" asp-action="Departments" asp-route-id="1"><button class="btn">Департаменты</button></a>

                </button>
            </div>

        </div>
    </div>
</div>
<!-- jQuery -->
<script src="../bower_components/jquery/dist/jquery.min.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="~/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

<!-- Metis Menu Plugin JavaScript -->
<script src="~/bower_components/metisMenu/dist/metisMenu.min.js"></script>

<!-- DataTables JavaScript -->
<script src="~/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
<script src="~/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js"></script>

<!-- Custom Theme JavaScript -->
<script src="~/js/sb-admin-2.js"></script>

<!-- Page-Level Demo Scripts - Tables - Use for reference -->
<script>
    $(document).ready(function() {
        $('#dataTables-example').DataTable({
                responsive: true
        });
    });
</script>
