@model qvisitorCorp.Models.qvCity

@{
    ViewData["Title"] = "Delete";
    Layout = "_mockupLayout";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Удалить город</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <ol class="breadcrumb">
        <li>
            <a asp-controller="mockup" asp-action="Cities"> Города</a>
        </li>
        <li class="active">
            Удалить город
        </li>
    </ol>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <i class="glyphicon glyphicon-list-alt"></i>
                    Удалить город
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <h3>Вы действительно хотите удалить это?</h3>
                    <div>
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.Name)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.Name)
                            </dd>
                        </dl>

                        <form asp-action="Delete">
                            <div class="form-actions no-color">
                                <input type="submit" value="Удалить" class="btn" />
                                <a style="color:#333;" asp-controller="mockup" asp-action="Cities">
                                    <button type="button" class="btn">Отменить</button>
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <!-- /.row -->

</div>

